{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "width": 900,
    "height": 300,
    "data": {
        "url": "https://raw.githubusercontent.com/AnEvilBurrito/FIT3179/main/a2/SPX1995TO2020-monthly.csv"
    },
    "layer": [
        {
            "mark": {
                "type": "area",
                "line": {
                    "color": "darkgreen"
                },
                "color": {
                    "x1": 1,
                    "y1": 1,
                    "x2": 1,
                    "y2": 0,
                    "gradient": "linear",
                    "stops": [
                        {
                            "offset": 0,
                            "color": "white"
                        },
                        {
                            "offset": 1,
                            "color": "darkgreen"
                        }
                    ]
                }
            },
            "encoding": {
                "x": {
                    "field": "Date",
                    "type": "temporal",
                    "title": "Date"
                },
                "y": {
                    "field": "Close",
                    "type": "quantitative",
                    "title": "Price"
                },
                "tooltip": [
                    {
                        "field": "Close",
                        "type": "quantitative"
                    },
                    {
                        "field": "Date",
                        "type": "temporal"
                    }
                ]
            }
        }

    ]
}