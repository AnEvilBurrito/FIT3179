{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "width": 950,
    "height": 300,
    "data": {
        "url": "https://raw.githubusercontent.com/AnEvilBurrito/FIT3179/main/a2/SPX1995TO2020-monthly.csv"
    },
    "layer": [
        {
            "mark": {
                "type": "text",
                "baseline": "middle",
                "fontSize": 12,
                "dy": 25,
                "dx": -270,
                "fontWeight": "bold"
            },
            "data": {
                "values": [
                    {
                        "event": "The Dot-com Bubble"
                    }
                ],
                "format": {
                    "parse": {
                        "start": "date:'%Y'",
                        "end": "date:'%Y'"
                    }
                }
            },
            "encoding": {
                "text": {
                    "field": "event",
                    "type": "nominal"

                }
            }
        },
        {
            "mark": {
                "type": "text",
                "baseline": "middle",
                "fontSize": 12,
                "dy": 35,
                "dx": 70,
                "fontWeight": "bold"
            },
            "data": {
                "values": [
                    {
                        "event": "Global Financial Crisis"
                    }
                ],
                "format": {
                    "parse": {
                        "start": "date:'%Y'",
                        "end": "date:'%Y'"
                    }
                }
            },
            "encoding": {
                "text": {
                    "field": "event",
                    "type": "nominal"
                }
            }
        },
        {
            "mark": {
                "type": "text",
                "baseline": "middle",
                "fontSize": 12,
                "dy": -125,
                "dx": 420,
                "fontWeight": "bold"
            },
            "data": {
                "values": [
                    {
                        "event": "Coronavirus Crash"
                    }
                ],
                "format": {
                    "parse": {
                        "start": "date:'%Y'",
                        "end": "date:'%Y'"
                    }
                }
            },
            "encoding": {
                "text": {
                    "field": "event",
                    "type": "nominal"
                }
            }
        },
        {
            "mark": {
                "type": "area",
                "line": {
                    "color": "darkgreen"
                },
                "color": {
                    "x1": 1,
                    "y1": 1,
                    "x2": 1,
                    "y2": 0,
                    "gradient": "linear",
                    "stops": [
                        {
                            "offset": 0,
                            "color": "white"
                        },
                        {
                            "offset": 1,
                            "color": "darkgreen"
                        }
                    ]
                }
            },
            "encoding": {
                "x": {
                    "field": "Date",
                    "type": "temporal",
                    "title": "Date (Year)"
                },
                "y": {
                    "field": "Close",
                    "type": "quantitative",
                    "title": "Price (USD)"
                },
                "tooltip": [
                    {
                        "field": "Close",
                        "type": "quantitative"
                    },
                    {
                        "field": "Date",
                        "type": "temporal"
                    }
                ]
            }
        }

    ],
    "config": {
        "axis": {
            "labelFont": "georgia",
            "titleFont": "georgia",
            "labelFontSize": 12
        },
        "legend": {
            "labelFont": "georgia",
            "titleFont": "georgia",
            "titleFontSize": 16,
            "rowPadding": 12,
            "titlePadding": 16
        },
        "header": {
            "labelFont": "georgia",
            "titleFont": "georgia"
        },
        "mark": {
            "font": "georgia"
        },
        "title": {
            "font": "georgia",
            "subtitleFont": "georgia"
        },
        "view": {
            "stroke": ""
        }
    }
}