{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "width": 800,
    "height": 600,
    "projection": {
        "type": "albersUsa"
    },
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/AnEvilBurrito/FIT3179/main/ne_110m_admin_1_states_provinces.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_1_states_provinces"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "#555555",
                "stroke": "white"
            }
        },
        {
            "data": {
                "graticule": {
                    "step": [
                        30,
                        30
                    ]
                }
            },
            "mark": {
                "type": "geoshape",
                "stroke": "gray"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/AnEvilBurrito/FIT3179/main/FinalData.csv"
            },
            "encoding": {
                "longitude": {
                    "field": "Long",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "Lat",
                    "type": "quantitative"
                }
            },
            "layer": [
                {
                    "selection": {
                        "sector": {
                            "type": "multi",
                            "fields": [
                                "Sector"
                            ],
                            "bind": "legend"
                        }
                    },
                    "mark": {
                        "type": "point",
                        "tooltip": {
                            "content": "data"
                        }
                    },
                    "encoding": {
                        "size": {
                            "field": "Market Cap",
                            "type": "quantitative",
                            "scale": {
                                "rangeMax": 2500
                            }
                        },
                        "color": {
                            "field": "Sector",
                            "type": "nominal",
                            "scale": {
                                "scheme": "category20"
                            }
                        },
                        "opacity": {
                            "condition": {
                                "selection": "sector",
                                "value": 1
                            },
                            "value": 0
                        }
                    }                    
                }
            ],
            "transform": [
                {
                    "filter": "datum.Long < -69"
                }
            ]
        }
    ],
    "config": {
        "axis": {
            "labelFont": "georgia",
            "titleFont": "georgia"
        },
        "legend": {
            "labelFont": "georgia",
            "titleFont": "georgia",
            "titleFontSize": 16,
            "rowPadding": 12,
            "titlePadding": 16
        },
        "header": {
            "labelFont": "georgia",
            "titleFont": "georgia"
        },
        "mark": {
            "font": "georgia"
        },
        "title": {
            "font": "georgia",
            "subtitleFont": "georgia"
        }
    }
}