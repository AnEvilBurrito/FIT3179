{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "width": 300,
    "height": 200,
    "data": {
        "url": "https://raw.githubusercontent.com/AnEvilBurrito/FIT3179/main/a2/SPX1995TO2020-daily.csv"
    },
    "transform": [
        {
            "filter": {
                "timeUnit": "year",
                "field": "Date",
                "gt": "2018"
            }
        },
        {
            "filter": {
                "timeUnit": "month",
                "field": "Date",
                "gt": "Jan"
            }
        }
    ],
    "layer": [
        {   
            "title": "The Coronavirus Crash 2020",
            "mark": {
                "type": "area",
                "line": {
                    "color": "darkgreen"
                },
                "color": {
                    "x1": 1,
                    "y1": 1,
                    "x2": 1,
                    "y2": 0,
                    "gradient": "linear",
                    "stops": [
                        {
                            "offset": 0,
                            "color": "white"
                        },
                        {
                            "offset": 1,
                            "color": "darkgreen"
                        }
                    ]
                }
            },
            "encoding": {
                "x": {
                    "field": "Date",
                    "type": "temporal",
                    "title": null,
                    "axis": {
                        "labelExpr": "[timeFormat(datum.value, '%b'), timeFormat(datum.value, '%m') == '01' ? timeFormat(datum.value, '%Y') : '']"
                    }
                },
                "y": {
                    "field": "Close",
                    "type": "quantitative",
                    "title": null
                },
                "tooltip": [
                    {
                        "field": "Close",
                        "type": "quantitative"
                    },
                    {
                        "field": "Date",
                        "type": "temporal"
                    }
                ]
            }
        }
    ],
    "config": {
        "axis": {
            "labelFont": "georgia",
            "titleFont": "georgia",
            "labelFontSize": 12
        },
        "legend": {
            "labelFont": "georgia",
            "titleFont": "georgia"
        },
        "header": {
            "labelFont": "georgia",
            "titleFont": "georgia"
        },
        "mark": {
            "font": "georgia"
        },
        "title": {
            "font": "georgia",
            "subtitleFont": "georgia"
        },
        "view": {
            "stroke": ""
        }
    }
}