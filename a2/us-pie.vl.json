{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "description": "A simple pie chart with embedded data.",
    "data": {
        "url": "https://raw.githubusercontent.com/AnEvilBurrito/FIT3179/main/FinalData.csv"
    },
    "transform": [
        {
            "aggregate": [
                {
                    "op": "count",
                    "field": "Sector",
                    "as": "companyCount"
                },
                {
                    "op": "sum",
                    "field": "Market Cap",
                    "as": "marketValue"
                }
            ],
            "groupby": ["Sector"]
        },
        {
            "window": [{
                "op": "sum",
                "field": "companyCount",
                "as": "totalCount"
            }],
            "frame": [
                null,
                null
            ]
        },
        {
            "calculate": "datum.companyCount/datum.totalCount * 100",
            "as": "perc"
        }
    ],

    "hconcat": [ 
        {   
            "title": "Sector percentage (%) of companies",
            "layer": [
                {
                    "selection": {
                        "sector": {
                            "type": "multi",
                            "fields": [
                                "Sector"
                            ],
                            "bind": "legend"
                        }
                    },
                    "mark": {
                        "type": "arc",
                        "outerRadius": 80
                    }
                },
                {
                    "mark": {
                        "type": "text",
                        "radius": 90
                    },
                    "encoding": {
                        "text": {
                            "field": "perc",
                            "type": "nominal",
                            "format": ".0f"
                        }
                    }
                }
            ],
            "encoding": {
                "theta": {
                    "field": "companyCount",
                    "type": "quantitative",
                    "stack": true
                },
                "color": {
                    "field": "Sector",
                    "type": "nominal",
                    "scale": {
                        "scheme": "category20"
                    }
                },
                "opacity": {
                    "condition": {
                        "selection": "sector",
                        "value": 1
                    },
                    "value": 0.2
                },
                "tooltip": [
                    {
                        "field": "companyCount",
                        "type": "quantitative"
                    },
                    {
                        "field": "Sector",
                        "type": "nominal"
                    }
                ]
            }
        },
        {   
            "title": "Sector Total Market Capitalisation (USD)",
            "mark": "bar",
            "encoding": {
                "y": {
                    "field": "marketValue",
                    "type": "quantitative",
                    "title": null
                },
                "x": {
                    "field": "Sector",
                    "type": "nominal",
                    "title": null, 
                    "axis": {
                        "labels": false
                    },
                    "sort": {
                        "field": "marketValue",
                        "op": "max",
                        "order": "ascending"
                    }
                },
                "color": {
                    "field": "Sector",
                    "type": "nominal",
                    "scale": {
                        "scheme": "category20"
                    }
                },
                "opacity": {
                    "condition": {
                        "selection": "sector",
                        "value": 1
                    },
                    "value": 0.2
                },
                "tooltip": [
                    {
                        "field": "marketValue",
                        "type": "quantitative"
                    },
                    {
                        "field": "Sector",
                        "type": "nominal"
                    }
                ]
            }
        }

    ],

    "config": {
        "axis": {
            "labelFont": "georgia",
            "titleFont": "georgia",
            "labelFontSize": 10
        },
        "legend": {
            "labelFont": "georgia",
            "titleFont": "georgia",
            "titleFontSize": 16,
            "rowPadding": 5,
            "titlePadding": 10
        },
        "header": {
            "labelFont": "georgia",
            "titleFont": "georgia"
        },
        "mark": {
            "font": "georgia"
        },
        "title": {
            "font": "georgia",
            "subtitleFont": "georgia"
        },
        "view": {
            "stroke": ""
        }
    }
}