{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 400,
  "height": 300,
  "title": "Standard & Poor Listed Companies and their Market Capitalisation in US Mainland",
  "projection": {"type": "albersUsa"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/AnEvilBurrito/FIT3179/main/ne_110m_admin_1_states_provinces.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_1_states_provinces"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#aaaaaa",
        "stroke": "white"
      }
    },
    {
      "data": {
        "graticule": {
          "step": [
            30,
            30
          ]
        }
      },
      "mark": {
        "type": "geoshape", 
        "stroke": "gray"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/AnEvilBurrito/FIT3179/main/FinalData.csv"
      },
      "encoding": {
        "longitude": {"field": "Long", "type": "quantitative"},
        "latitude": {"field": "Lat", "type": "quantitative"}
      },
      "layer": [
        {
          "mark": {"type": "point", "tooltip": {"content": "data"}},
          "encoding": {
            "size": {
              "field": "Market Cap",
              "type": "quantitative",
              "scale": {"rangeMax": 2500}
            },
            "color": {
              "field": "Market Cap",
              "type": "quantitative",
              "scale": {"scheme": "greens"}
            }
          }
        }
      ],
      "transform": [
        {"filter": "datum.Long < -69"}
      ]
    }
  ],
  "config": {}
}